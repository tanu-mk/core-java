package com.xworkz.hospitalapp.patient;

public class Patient {
	
	public String patientName;
	public String address;
	public String gender;
	
	public Patient(String patientName, String address, String gender) {
		
		this.patientName = patientName;
		this.address = address;
		this.gender = gender;
	}
	
	public void displayInfo() {
		
		System.out.println("The patient name is: "+ this.patientName);
		System.out.println("Patient address is: " + this.address);
		System.out.println("Patient gender is :" + this.gender);
		
		
		}

}
